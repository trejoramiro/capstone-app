<%= form_tag("/events/#{@group.id}", method: "post") do %>
<div>
<%= label_tag(:name, "Name") %>
<%= text_field_tag(:name) %>
</div>
<div>
<%= label_tag(:description, "Description") %>
<%= text_field_tag(:description) %>
</div>
<div>
<%= label_tag(:capacity, "Capacity") %>
<%= text_field_tag(:capacity) %>
</div>
<div>
<%= label_tag(:start_time, "Start Time") %>
<%= time_field_tag(:start_time)%>
<!-- <%= text_field_tag(:start_time) %> -->
</div>
<div>
<%= label_tag(:end_time, "End Time") %>
<%= time_field_tag(:end_time)%>
<!-- <%= text_field_tag(:end_time) %> -->
</div>
<div>
  <%= label_tag(:date, "Date") %>
  <%= date_field_tag(:date, nil, class: 'datepicker') %>
  <!-- <input type="date" class="datepicker"> -->
</div>
<%= submit_tag("Create") %>
<% end %>
