
<div class="row">
  <div class="col s12"> 
    <div class="card horizontal">
      <div class="card-image"></div><img src="#"/>
      <div class="card-stacked">
        <h4>Don't Miss These Places For Next Meetup</h4>
        <div class="card-content">
          <p>I am a very simple card</p>
        </div>
        <div class="card-action"><a href="#">This is a link </a></div>
      </div>
    </div>
  </div>
  <div class="col s6"><a href="/events/:group_id/new" class="waves-effect waves-light btn">Create New Event</a></div>
  <div class="col s6"><a href="/events/:group_id/new" class="waves-effect waves-light btn">Create Group  </a></div>
  <div class="col s12">
    <h4 class="header">Groups</h4><% @groups.each do |group| %>
    <div class="card blue-grey darken-1">
      <div class="card-content white-text"><span class="card-title"><%= group.name %></span>
        <p><%= group.location %></p>
        <p>Next Event</p>
        <p><%= @events[group.id.to_s].name %></p>
        <p><%= @events[group.id.to_s].start_time %></p>
      </div>
      <div class="card-action">
        <p class="white-text">Members</p>
        <ul class="collection">
          <% members = @members[group.id.to_s] %>
          <% members.each do |member| %>
          <li class="collection-item avatar"><img src="/<%= member.profile_img %>" class="circle"/><span class="title"><%= member.username %> </span>
          </li><% end %>
        </ul><a href="/groups/<%= group.id %>">View More... </a>
      </div>
    </div><% end %>
  </div>
</div>