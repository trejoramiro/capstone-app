  <body>
    <nav class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Project name</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="active"><a href="#">Home</a></li>
            <li><a href="#about">About</a></li>
            <li><a href="#contact">Contact</a></li>
          </ul>
        </div><!-- /.nav-collapse -->
      </div><!-- /.container -->
    </nav><!-- /.navbar -->

    <div class="container">

      <div class="row row-offcanvas row-offcanvas-right">

        <div class="col-xs-12 col-sm-9">
          <p class="pull-right visible-xs">
            <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
          </p>
          <div class="jumbotron">
            <h2>Don't Miss These Places For Next Meetup </h2>
            <div ng-app="app">
              <div ng-controller="appCtrl">
              {{ 2 + 2}}
              </div> <!--/.ng-controller-->
            </div><!-- /.ng-app-->
          </div><!-- jumbotron -->

           <% @groups.each do |group| %>
           <div class="row">
              <div class="row">
                <div class="col-xs-8">
              <h2><%= group.name %></h2>
              <p><%= group.location %></p>
                </div class="col-xs-4">
                <h2>#</h2>
                </div>
              <div class="row">
                  <h4>Next Event</h4>
                  <p><%= group.events.order(:start_time).first.name %> <%= group.events.order(:start_time).first.start_time %></p>
                  <p><%= group.events.order(:start_time).first.venues.where(chosen: true).first.name %></p>
                  <p><%= group.events.order(:start_time).first.venues.where(chosen: true).first.location %></p>
                  <h4>Activity</h4>
                  <p>#</p>
              </div>
                <div class="row">
                <div class="col-xs-6">
                <h4>Members (<%= group.users.count %>)</h4>
                  <% group.users.each do |user| %>
                    <p><%= user.username %></p>
                  <% end %>
                </div>
                <div class="col-xs-6">
                  <h4>Comments</h4>
                  <p>#</p>
                </div>
                </div>
                  <p><a class="btn btn-default" href="/groups/<%= group.id %>" role="button">View Group &raquo;</a></p>
            </div> <!-- div above group.name !-->
          <% end %>
          </div><!-- row -->

        </div><!--/.col-xs-12.col-sm-9-->

        <div class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar">

        </div><!--/.sidebar-offcanvas-->

        <div>
          <a role="button" href="/groups/new" class="btn btn-primary">Create Group</a>
          <a role="button" href="#" class="btn btn-success">Create Event</a>
        </div>
      </div><!--/row row-offcanvas row-offcanvas-right -->

      <hr>

      <footer>
        <p>&copy; 2016 Company, Inc.</p>
      </footer>
    </div><!--/.container-->


