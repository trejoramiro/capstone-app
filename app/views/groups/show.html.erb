  <head>
    <title><%= @group.name %></title>
    <link href="offcanvas.css" rel="stylesheet">
  </head>

    <%= render 'navbar' %>

    <div class="row row-offcanvas row-offcanvas-right">
        <div class="col-xs-12 col-sm-9">
          <div class="jumbotron">
            <h2>Search for a Venue</h2>
            <%= render 'searchbox' %>
          </div>
          <div class="row">
            <% @events.each do |event| %>
            <% vote = current_user.votes.where(event_id: event.id).first %>
            <div class="col-xs-6 col-lg-4">
              <h2><%= event.name %></h2>
              <% if event.are_voting == true %>
              <% status = "Voting" %>
              <% else %>
              <% status = "None" %>
              <% end %>
              <p>Status: <%= status %></p>
              <p>Location: </p>
              <p>Going: </p>
              <p>Venues </p>
              <ul class="list-group">
              <% event.venues.each do |venue| %>
              <% if vote.venue_id == venue.id %>
              <% class_name = "list-group-item active"%>
              <% else %>
              <% class_name = "list-group-item"%>
              <% end %>
              <li class="<%= class_name %>"`>
              <%= venue.name %>
              <span class="badge"><%= venue.votes.count %></span>
              </li>
              <% end %>
              </ul>

              <p><a class="btn btn-primary" href="/votes/<%= @group.id%>/<%= event.id%>" role="button">Vote</a></p>
            </div><!--/.col-xs-6.col-lg-4-->
            <% end %>
          </div><!--/row-->
        </div><!--/.col-xs-12.col-sm-9-->

        <div class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar">
          <div class="list-group">
            <a role="button" href="/groups/new" type="button" class="btn btn-success">Create Event</a>
          </div>
        </div><!--/.sidebar-offcanvas-->
    </div><!--/row row-offcanvas row-offcanvas-right-->

    <%= render 'footer' %>
